{
  "name": "@cobuilders/hardhat-arb-compile",
  "version": "0.0.1-alpha.13",
  "description": "Hardhat plugin for compiling Arbitrum Stylus (Rust/WASM) contracts",
  "homepage": "https://github.com/CoBuilders-xyz/hardhat-arbitrum-stylus/tree/main/packages/hardhat-arb-compile",
  "keywords": [
    "arbitrum",
    "stylus",
    "hardhat",
    "hardhat-plugin",
    "rust",
    "wasm",
    "compiler",
    "cargo-stylus"
  ],
  "author": "CoBuilders",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CoBuilders-xyz/hardhat-arbitrum-stylus",
    "directory": "packages/hardhat-arb-compile"
  },
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": "./dist/src/index.js",
    "./utils": "./dist/src/utils/index.js"
  },
  "scripts": {
    "build": "tsc --build .",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "node --import tsx/esm --test --test-reporter=spec \"test/*.ts\"",
    "pretest": "pnpm build"
  },
  "files": [
    "dist/src/",
    "src/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "smol-toml": "^1.3.0"
  },
  "peerDependencies": {
    "@cobuilders/hardhat-arb-node": "workspace:^",
    "@cobuilders/hardhat-arb-utils": "workspace:^",
    "hardhat": "^3.0.0"
  },
  "devDependencies": {
    "@cobuilders/hardhat-arb-node": "workspace:^",
    "@cobuilders/hardhat-arb-utils": "workspace:^",
    "@cobuilders/hardhat-arbitrum-stylus": "workspace:^",
    "@types/node": "^22.0.0",
    "eslint": "^9.18.0",
    "hardhat": "^3.0.0",
    "prettier": "^3.4.0",
    "tsx": "^4.19.3"
  },
  "publishConfig": {
    "access": "public"
  }
