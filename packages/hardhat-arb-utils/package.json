{
  "name": "@cobuilders/hardhat-arb-utils",
  "version": "0.0.1-alpha.17",
  "description": "Shared utilities for hardhat-arbitrum-stylus plugins (internal)",
  "homepage": "https://github.com/CoBuilders-xyz/hardhat-arbitrum-stylus/tree/main/packages/hardhat-arb-utils",
  "keywords": [
    "arbitrum",
    "stylus",
    "hardhat",
    "utilities",
    "docker"
  ],
  "author": "CoBuilders",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CoBuilders-xyz/hardhat-arbitrum-stylus",
    "directory": "packages/hardhat-arb-utils"
  },
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./container": {
      "types": "./dist/src/container/index.d.ts",
      "default": "./dist/src/container/index.js"
    },
    "./errors": {
      "types": "./dist/src/errors/index.d.ts",
      "default": "./dist/src/errors/index.js"
    },
    "./web3": {
      "types": "./dist/src/web3/index.d.ts",
      "default": "./dist/src/web3/index.js"
    },
    "./testing": {
      "types": "./dist/src/testing/index.d.ts",
      "default": "./dist/src/testing/index.js"
    },
    "./stylus": {
      "types": "./dist/src/stylus/index.d.ts",
      "default": "./dist/src/stylus/index.js"
    },
    "./task-helpers": {
      "types": "./dist/src/task-helpers/index.d.ts",
      "default": "./dist/src/task-helpers/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build .",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm build",
    "test": "node --import tsx/esm --test --test-reporter=spec \"test/*.test.ts\"",
    "pretest": "pnpm build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "files": [
    "dist/src/",
    "src/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "smol-toml": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.18.0",
    "hardhat": "^3.0.0",
    "prettier": "^3.4.0",
    "rimraf": "^6.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.9.3",
    "viem": "^2.30.0"
  },
  "peerDependencies": {
    "hardhat": "^3.0.0",
    "viem": "^2.30.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
